# Frontend (Vite)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Optional: General UI testing mode (skip /api calls, use mock data)
VITE_USE_MOCK_DATA=false

# Serverless (Vercel Functions)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# LINE Login (OIDC)
# Required for "Login with LINE" button on Auth page.
LINE_CHANNEL_ID=
LINE_CHANNEL_SECRET=
# Optional: set exact redirect URI registered in LINE Console.
# If omitted, defaults to: {APP_BASE_URL or inferred base}/auth/line/callback
LINE_REDIRECT_URI=

# Optional: override redirect base URL for Stripe success/cancel
# If not set, functions will infer from request host.
APP_BASE_URL=
